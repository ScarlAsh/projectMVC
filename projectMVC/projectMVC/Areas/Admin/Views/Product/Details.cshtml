@using projectMVC.Models;
@using projectMVC.Enums;
@model projectMVC.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h4>Product details</h4>
<div>
    
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model =>model.Color)
        </dt>
        <dd class ="col-sm-10">
             @((ProductColors)Model.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnitsInStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitsInStock)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RealseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RealseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

    </dl>
</div>


<div>
    <dl class="row">
        <dt class="col-sm-2">
    <label asp-for="ProductInfos"></label>
        </dt>
    <dd class="col-sm-10">
    @foreach (var p in @Model.ProductInfos)
    {
        <p>@p.Info</p>
       
    }
    </dd>
    </dl>
</div>

<br>
<br>

<div>
    <p>Product images</p>

    <br>
    <br>
    <table class="table">
    <tr>
    @for (var i = 0; i < Model.Images.Count; i++)
    {
        <td>

                    <img width="200" height="200" src="~/assets/images/ourimages/@Model.Images[i].ImageUrl" alt="product Image" />
        
        </td>
    }

    </tr>
    </table>
</div>




<div>
    <a class="btn btn-light" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a class="btn btn-light" asp-action="Index">Back to List</a>
</div>
